{% extends '../layout.njk' %}

{% block content %}

<main>
  <div id="students-table-container" class="card table-container">
    <table width="100%">
      <thead>
        <tr>
          <th>Aluno</th>
          <th>Série</th>
          <th>Email</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for student in students %}
          <tr>
            <td>
              <span style="background-image: url({{ student.avatar_url }})"></span>
              {{ student.name }}
            </td>
            <td>{{ student.grade }}º ano</td>
            <td>{{ student.email }}</td>
            <td><a href="/students/{{ student.id }}">ver</a></td>
          </tr>
          {% endfor %}
      </tbody>
    </table>
    <div class="create-button-container">
      <a class="button" href="/students/create">Novo</a>
    </div>
  </div>
</main>

{% endblock %}