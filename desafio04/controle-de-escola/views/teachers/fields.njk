<div class="item">
  <div>Avatar URL</div>
  <div>
    <input
      type="text"
      name="avatar_url"
      placeholder="http://"
      value="{{ teacher.avatar_url }}"
    >
  </div>
</div>

<div class="item">
  <div>Nome</div>
  <div>
    <input
      type="text"
      name="name"
      placeholder="Nome do Professor"
      value="{{ teacher.name }}"
    >
  </div>
</div>

<div class="item">
  <div>Data de nascimento</div>
  <div>
    <input type="date" name="birth" value="{{ teacher.birth }}">
  </div>
</div>

<div class="item">
  <div>Tipo de aula</div>
  <div>
    <span>
      <input 
        type="radio"
        name="type"
        value="inperson"
        {% if teacher.type == 'inperson' %}
          checked
        {% endif %}> Presencial
    </span>
    <span>
      <input
        type="radio"
        name="type"
        value="online"
        {% if teacher.type == 'online' %}
          checked
        {% endif %}> A distância
    </span>
  </div>
</div>

<div class="item">
  <div>Grau de escolaridade</div>
  <div>
    <select name="educational_level">
      <option 
        value="medio" 
        {% if teacher.educational_level == 'medio' %}
          selected
        {% endif %}>Ensino Médio Completo
      </option>
      <option
        value="superior"
        {% if teacher.educational_level == 'superior' %}
          selected
        {% endif %}>Ensino Superior Completo
      </option>
      <option
        value="mestrado"
        {% if teacher.educational_level == 'mestrado' %}
          selected
        {% endif %}>Mestrado
      </option>
      <option 
        value="doutorado"
        {% if teacher.educational_level == 'doutorado' %}
          selected
        {% endif %}>Doutorado
      </option>
    </select>
  </div>
</div>

<div class="item">
  <div>Matérias ensinadas</div>
  <div>
    <input
      type="text"
      name="subjects"
      placeholder="Digite as matérias separadas por vírgula"
      value="{{ teacher.subjects }}"
    >
  </div>
</div>

<button type="submit">Salvar</button>
